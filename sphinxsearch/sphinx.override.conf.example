indexer
{
    mem_limit = 1024M
}

searchd
{
    listen = localhost:36307
    listen = localhost:36308:mysql41
    log = /opt/sphinx/log/searchd.log
    #query_log = /opt/sphinx/log/query.log
    read_timeout = 5
    max_children = 30
    pid_file = /opt/sphinx/log/searchd.pid

    seamless_rotate = 1
    preopen_indexes = 1
    workers = threads # for RT to work
    binlog_path = /opt/sphinx/index

    sphinxql_timeout = 900
    #max_packet_size = 32M

    #binlog_max_log_size = 16M
    rt_flush_period = 3600
}

index ind_example
{
    type = rt
    path = /opt/sphinx/index/ind_example

    rt_field = title
    rt_attr_string = title

    expand_keywords		= 0
    min_word_len		= 1
    min_prefix_len		= 1
    min_infix_len = 2
}
